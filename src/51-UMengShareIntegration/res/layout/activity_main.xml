<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_sina_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录（新浪微博）" />

    <Button
        android:id="@+id/btn_sina_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注销（新浪微博）" />

    <Button
        android:id="@+id/btn_qq_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录（QQ）" />

    <Button
        android:id="@+id/btn_qq_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注销（QQ）" />

    <Button
        android:id="@+id/btn_wechat_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录（微信）" />
 	<Button
        android:id="@+id/btn_wechat_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注销（微信）" />
    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="一键分享" />

</LinearLayout>